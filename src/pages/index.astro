---
import MainLayout from '../layouts/MainLayout.astro';
import ProductCard from '../components/ProductCard.astro';
import Header from '../components/Header.astro';
---

<MainLayout title="Street Fashion Hub">
  <!-- Hero Section -->
  <section class="relative h-[80vh] bg-street-black text-white flex items-center justify-center">
    <img src="/images/hero-bg.jpg" alt="Streetwear Hero" class="absolute inset-0 w-full h-full object-cover opacity-70" />
    <div class="relative z-10 text-center">
      <h1 class="text-5xl md:text-7xl font-bold tracking-tight">Street Fashion Hub</h1>
      <p class="mt-4 text-xl md:text-2xl">Homegrown Brands. Urban Vibes.</p>
      <a href="/products" class="mt-6 inline-block bg-street-accent text-white px-6 py-3 rounded-full font-semibold hover:bg-opacity-80 transition">
        Shop Now
      </a>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="py-12 container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-8">Featured Drops</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <ProductCard name="Oversized Hoodie" price="45" image="/images/hoodie.jpg" />
      <ProductCard name="Ripped Jeans" price="60" image="/images/jeans.jpg" />
      <ProductCard name="Graffiti Tee" price="30" image="/images/tee.jpg" />
    </div>
    <div class="text-center mt-8">
      <a href="/products" class="text-street-accent font-semibold hover:underline">View All Products</a>
    </div>
  </section>
</MainLayout>